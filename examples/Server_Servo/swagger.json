{
  "swagger": "2.0",
  "info": {
    "description": "Sample server Servo Motor server using schapiuino.",
    "version": "1.0.0",
    "title": "Swagger Servo Motor API"
  },
  "host": "192.168.1.178",
  "basePath": "/servomotor",
  "paths": {
    "/angle": {
      "get": {
        "summary": "Returns current angle on servo motor",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Angle"
            }
          }
        }
      },
      "post": {
        "summary": "Sets angle on servo motor",
        "produces": [
          "text/plain"
        ],
        "consumes": [
          "text/plain"
        ],
        "parameters":[
          {
            "in":"body",
            "name":"body",
            "description":"Angle to swicth",
            "required":true,
            "schema":{
              "$ref":"#/definitions/Body"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "successful operation"
          }
        }
      }
    },
    "/reset": {
      "post": {
        "summary": "It forces the servo motor to turn to angle = 0",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "text/plain"
        ],
        "parameters":[
          {
            "in":"body",
            "name":"body",
            "description":"Angle to swicth",
            "required":true,
            "schema":{
              "$ref":"#/definitions/Body"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "successful operation"
          }
        }
      }
    }
  },
  "definitions": {
    "Angle": {
      "type": "object",
      "properties": {
        "angle": {
          "type": "integer"
        }
      }
    },
    "Body": {
      "type": "integer",
      "format": "int64"
    }
  }
}